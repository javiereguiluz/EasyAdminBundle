{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{# @var field \EasyCorp\Bundle\EasyAdminBundle\Dto\FieldDto #}
{# @var entity \EasyCorp\Bundle\EasyAdminBundle\Dto\EntityDto #}
{% set html_id = 'ea-lightbox-' ~ field.uniqueId %}
<a href="#" class="ea-lightbox-thumbnail" data-featherlight="#{{ html_id }}" data-featherlight-close-on-click="anywhere">
    <img loading="lazy" src="{{ asset(field.formattedValue) }}" class="img-fluid">
</a>

<div id="{{ html_id }}" class="ea-lightbox">
    <img
        src="{{ data_uri_thumbnail(field.formattedValue, 100, 50) }}"
        data-controller="@symfony/ux-lazy-image/lazy-image"
        data-hd-src="{{ asset(field.formattedValue) }}"
        loading="lazy"
        width="100"
        height="50"
    />
</div>
